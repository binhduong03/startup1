@using startup.Models;
@using startup.Utilities;
@model IList<Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- Recent Post Start -->
<div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
    <div class="section-title section-title-sm position-relative pb-3 mb-4">
        <h3 class="mb-0">Recent Post</h3>
    </div>

    @foreach(var item in Model)
    {
        string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
        <div class="d-flex rounded overflow-hidden mb-3"> 
            <img class="img-fluid" src="@item.Images" style="width: 100px; object-fit: cover;" alt:"">
            <a href ="/@url" class="h5 fr-semi-boid d-flex align-items-center bg-light px-3 mb-0">@item.Title</a>
        </div>
    }
</div>
<!-- Recent Post End -->
